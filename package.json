{
  "name": "artemis",
  "version": "2.0.1",
  "description": "",
  "type": "module",
  "scripts": {
    "install-server": "npm install --prefix ./packages/server",
    "install": "lerna bootstrap",
    "client": "npm run start --prefix client",
    "server": "nodemon index.js",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "node index.js",
    "lint": "tslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "node hooks/restrict-commit.js && echo \"Running tslint...\" && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx}": [
      "tslint"
    ]
  },
  "keywords": [],
  "lint": "tslint --project tslint.json",
  "author": "Roberto Rossini",
  "license": "ISC",
  "devDependencies": {
    "codelyzer": "^6.0.1",
    "concurrently": "^5.2.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.2",
    "nodemon": "^2.0.4",
    "tslint": "^6.1.3",
    "typescript": "^4.1.2"
  }
}
